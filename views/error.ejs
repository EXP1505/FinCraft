<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header') %>
    <title>Error | StockSage</title>
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container mt-5">
        <div class="error-container">
            <h1 class="mb-4">Error</h1>
            <div class="alert alert-danger">
                <p class="mb-1"><strong><%= message %></strong></p>
                <% if (error.status) { %>
                    <p class="mb-1">Status Code: <%= error.status %></p>
                <% } %>
            </div>
            
            <% if (error.stack && process.env.NODE_ENV !== 'production') { %>
                <pre class="error-stack p-3 bg-light"><%= error.stack %></pre>
            <% } %>
            
            <a href="/dashboard" class="btn btn-primary mt-3">Return to Dashboard</a>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>